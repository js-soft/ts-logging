        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "@js-soft/eslint-config-ts": "1.6.0",
        "@js-soft/license-check": "1.0.4",
        "@types/jest": "^28.1.6",
        "@types/node": "^18.6.3",
        "eslint": "^8.21.0",
        "jest": "^28.1.3",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.7",
        "typescript": "^4.7.4"
    }
}

        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "@js-soft/eslint-config-ts": "1.6.9",
        "@js-soft/license-check": "1.0.9",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.0.0",
        "eslint": "^9.8.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.3",
        "typescript": "^5.5.4"
    }
}

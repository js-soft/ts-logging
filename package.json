{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/abstractions",
        "packages/node",
        "packages/simple",
        "packages/web"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",

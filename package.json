        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "@js-soft/eslint-config-ts": "1.6.2",
        "@js-soft/license-check": "1.0.6",
        "@types/jest": "^29.2.5",
        "@types/node": "^18.11.18",
        "eslint": "^8.32.0",
        "jest": "^29.3.1",
        "prettier": "^2.8.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4"
    }
}
